# Normalize line endings for all text files
* text=auto eol=lf

# Godot-specific files
*.gd text
*.tscn text
*.tres text
*.import text
*.godot text
*.cfg text
*.json text
*.md text
*.txt text

# Binary files that should not be normalized
*.png binary
*.jpg binary
*.jpeg binary
*.webp binary
*.bmp binary
*.svg binary
*.wav binary
*.ogg binary
*.mp3 binary
*.obj binary
*.glb binary
*.gltf binary
*.fbx binary
*.blend binary
*.max binary
*.ma binary
*.mb binary
*.stl binary

# Export-ignore patterns - exclude Godot project files and configs
/.editorconfig export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/export_presets.cfg export-ignore
/project.godot export-ignore

# Exclude image files and their import data
/Icon.png export-ignore
/Icon.png.import export-ignore
/icon.svg export-ignore
/icon.svg.import export-ignore

# Keep these essential folders for the multiplayer FPS
!/MainMenu export-ignore
!/MainMenu/** export-ignore
!/Maps export-ignore
!/Maps/** export-ignore
!/Networking export-ignore
!/Networking/** export-ignore
!/Player export-ignore
!/Player/** export-ignore
!/Textures export-ignore
!/Textures/** export-ignore
!/Weapons export-ignore
!/Weapons/** export-ignore
!/addons export-ignore
!/addons/** export-ignore

# Keep LICENSE and README for users
!/LICENSE export-ignore
!/README.md export-ignore

# Godot import files (should be tracked but not exported)
*.import -export

# Don't export any .import files in the export
*.import export-ignore

# Don't export the addons folder if it contains sensitive data
#/addons/MultiPlay export-ignore

# Force specific file types to be treated as text
*.glsl text
